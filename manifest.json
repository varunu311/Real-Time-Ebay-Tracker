{
  "manifest_version": 2,
  "name": "eBay Price Tracker",
  "version": "1.0",
  "permissions": ["tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://www.ebay.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon-small.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-small.png",
    "48": "icon-medium.png",
    "128": "icon-large.png"
  }
}